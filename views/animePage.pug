include ./common/navbar.pug
include ./common/head.pug
include ./include/mixinCharacterCard.pug
include ./include/mixinComment.pug

doctype html
html(lang="en")
    +head("Anime Page")
    link(rel="stylesheet" href="./css/animePage.css")
    body 
        - let navUserName = 'dada da';
        +navbar(navUserName)
        // h5 Anime is : #{animeName}

        .container.mt-5
            .row
                .col-3
                    .animeCard.rounded
                        - const myAnime = {};
                        - myAnime.imgPath = './images/Naruto.jpg';
                        - myAnime.genres = ['Action', 'Adventure', 'Fantasy'];

                        .image-container.d-flex.justify-content-center
                            img.animeImg.rounded(src=myAnime.imgPath, alt="")

                        .addButtonDiv.d-flex.justify-content-center.my-3
                            button.btn.btn-primary.rounded(type='button') Add to Watchlist




                .col-9
                    .animeContent.px-5
                        .container-fluid 
                            .row.bg-dark.text-white.pt-3.px-3.rounded.mb-5
                                .col-12          
                                    .animeTitle.mb-2
                                        h2 #{anime.title}
                                    .authorDiv
                                        p Author : #{anime.author}
                                .col-12.mt-4.pb-3.px-2
                                    .personalRatingDiv.float-end.mx-3
                                        span.averageRatingDiv.bg-info.p-3.text-white Personal Rating
                                        span.averageRatingValueDiv.bg-white.text-dark.p-3 10

                                    .ratingDiv.float-end.mx-3
                                        span.averageRatingDiv.bg-primary.p-3.text-white Average Rating
                                        span.averageRatingValueDiv.bg-white.text-dark.p-3 8.03
                                    
                                    p Number of episodes : #{anime.numberOfEpisodes}


                            .row.mt-4
                                .descriptionDiv.mb-5
                                    p #{anime.description}
                            .row   
                                .genresDiv.d-flex.justify-content-start.gap-3 
                                    p Genres :
                                    a.link-primary(href='/anime/genre/asd') #{myAnime.genres[0]}
                                    a.link-primary(href='/anime/genre/asd') #{myAnime.genres[1]}
                                    a.link-primary(href='/anime/genre/asd') #{myAnime.genres[2]}


            .row 
                .col-12 
                    .charactersDiv.container.mt-3
                        h4 List of characters
                        .row.pt-2

                            - const character = {};
                            - character.name = "ASD";
                            - character.imgPath = './images/characters/naruto/asd.jpg';
                            +mixinCharacterCard(character)

                            - character.imgPath = './images/characters/naruto/asd (6).png';
                            +mixinCharacterCard(character)

                            +mixinCharacterCard(character)

                            +mixinCharacterCard(character)


                            +mixinCharacterCard(character)

                            +mixinCharacterCard(character)

                            +mixinCharacterCard(character)

                            +mixinCharacterCard(character)
                .row
                    .col-12
                        .container-fluid
                            button.col-2.rounded.btn.btn-primary(type='button' onclick=`location.href = '/${type}/characters/${animeName}';`) See All Characters



            .row.mt-5.pt-5
                .col-12 
                    .reviewsDiv
                        - const com = {}, username = "user123";
                        - com.avatar = "ðŸ™„";
                        - com.message = 'Lorem ipsum dolor sit amet consectetur adipisicing elit. Enim vel nihil neque, explicabo vero atque. Vero ullam accusamus quisquam adipisci, maxime voluptatum iusto, debitis temporibus dolores animi facilis aspernatur non!';
                        - com.author = username;
                        - com.createdAt = "12-03-2005";
                        - com.editedAt = "now";

                        +mixinComment(com, username)
                        +mixinComment(com, username)
                        +mixinComment(com, username)
                        +mixinComment(com, username)
                        +mixinComment(com, username)
                        +mixinComment(com, username)
                        +mixinComment(com, username)
                        +mixinComment(com, username)

            .row.my-5
                .container
                    .row.d-flex.justify-content-center.g-5
                        .col-2
                            button.col-12.btn.btn-primary.rounded(type='button') Previous

                        .col-2
                            button.col-12.btn.btn-primary.rounded(type='button') Next

            .row.pt-5
