        nav.navbar.navbar-expand-md.second-navbar.navbar-dark.py-1
            .container
                button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navmenu')
                    span.navbar-toggler-icon
                #navmenu.collapse.navbar-collapse
                    .container-fluid
                        .row
                            .col-4.d-flex.align-items-center
                                ul.navbar-nav.gap-2
                                    li.nav-item
                                    a.nav-link(href='#anime') Anime
                                    li.nav-item
                                    a.nav-link(href='#manga') Manga
                                    li.nav-item
                                    a.nav-link(href='#help') Help
                            .col-5
                            //- empty space for alignment

                            .col-3.d-flex.align-items-center
                                .input-group.mb-3.search-bar
                                    input.form-control(type='text' placeholder="Search..." aria-label="Search" aria-describedby='button-addon2')
                                    button#button-addon2.btn.btn-outline-secondary(type='button') Button


        - const anime = {};
        - anime.imgPath = './images/Naruto.jpg';
        - anime.title = 'Naruto';
        - anime.genres = ['Action', 'Adventure', 'Fantasy'];

        .container 
            .row
                // - - - - - - - - - - Anime Cards Carousel - - - - - - - - - - - - - - -
                .col-8 
                    .container.carousel-container.mt-3
                        h4 Top Animes
                        #myAnimeCarousel.carousel.slide(data-interval='false')
                            // Indicators
                            ol.carousel-indicators
                                li.active(data-target='#myAnimeCarousel' data-slide-to='0')
                                li(data-target='#myAnimeCarousel' data-slide-to='1')
                                li(data-target='#myAnimeCarousel' data-slide-to='2')
                            // Wrapper for slides
                            .carousel-inner
                                .item.active
                                    .container
                                        .d-flex.cards-container
                                            +mixinAnimeCard(anime)
                                            +mixinAnimeCard(anime)
                                            +mixinAnimeCard(anime)
                                            +mixinAnimeCard(anime)
                                .item
                                    .container
                                        .d-flex.cards-container
                                            +mixinAnimeCard(anime)
                                            +mixinAnimeCard(anime)
                                            +mixinAnimeCard(anime)
                                            +mixinAnimeCard(anime)
                                .item
                                    .container
                                        .d-flex.cards-container
                                            +mixinAnimeCard(anime)
                                            +mixinAnimeCard(anime)
                                            +mixinAnimeCard(anime)
                                            +mixinAnimeCard(anime)
                                            
                            // Left and right controls
                            a.left.carousel-control.rounded-2(href='#myAnimeCarousel' data-slide='prev')
                                .container-fluid.left-button
                                    .button
                                        svg(xmlns='http://www.w3.org/2000/svg' aria-hidden='true' role='img' width='48' height='48' preserveaspectratio='xMidYMid meet' viewbox='0 0 24 24')
                                            g(fill='none' stroke='black' stroke-width='2')
                                                circle(cx='12' cy='12' r='10')
                                                path(stroke-linecap='round' stroke-linejoin='round' d='m13.5 8l-4 4l4 4')

                                    span.glyphicon.glyphicon-chevron-left
                                    span.sr-only Previous
                            a.right.carousel-control.rounded-2(href='#myAnimeCarousel' data-slide='next')
                                 .container-fluid.left-button
                                    .button 
                                        svg(xmlns='http://www.w3.org/2000/svg' aria-hidden='true' role='img' width='48' height='48' preserveaspectratio='xMidYMid meet' viewbox='0 0 24 24')
                                            g(fill='none' stroke='black' stroke-width='2')
                                                circle(cx='12' cy='12' r='10')
                                                path(stroke-linecap='round' stroke-linejoin='round' d='m10.5 8l4 4l-4 4')

                                    span.glyphicon.glyphicon-chevron-right
                                    span.sr-only Next
                                    

                .col-4

                .row 
                    // - - - - - - - - - - Manga Cards Carousel - - - - - - - - - - - - - - -
                    .col-8 
                        .container.carousel-container.mt-5
                                        h4 Top Manga
                                        #myMangaCarousel.carousel.slide(data-interval='false')
                                            // Indicators
                                            ol.carousel-indicators
                                                li.active(data-target='#myMangaCarousel' data-slide-to='0')
                                                li(data-target='#myMangaCarousel' data-slide-to='1')
                                                li(data-target='#myMangaCarousel' data-slide-to='2')
                                            // Wrapper for slides
                                            .carousel-inner
                                                .item.active
                                                    .container
                                                        .d-flex.cards-container
                                                            +mixinAnimeCard(anime)
                                                            +mixinAnimeCard(anime)
                                                            +mixinAnimeCard(anime)
                                                            +mixinAnimeCard(anime)
                                                .item
                                                    .container
                                                        .d-flex.cards-container
                                                            +mixinAnimeCard(anime)
                                                            +mixinAnimeCard(anime)
                                                            +mixinAnimeCard(anime)
                                                            +mixinAnimeCard(anime)
                                                .item
                                                    .container
                                                        .d-flex.cards-container
                                                            +mixinAnimeCard(anime)
                                                            +mixinAnimeCard(anime)
                                                            +mixinAnimeCard(anime)
                                                            +mixinAnimeCard(anime)
                                                            
                                            // Left and right controls
                                            a.left.carousel-control.rounded-2(href='#myMangaCarousel' data-slide='prev')
                                                .container-fluid.left-button
                                                    .button
                                                        svg(xmlns='http://www.w3.org/2000/svg' aria-hidden='true' role='img' width='48' height='48' preserveaspectratio='xMidYMid meet' viewbox='0 0 24 24')
                                                            g(fill='none' stroke='black' stroke-width='2')
                                                                circle(cx='12' cy='12' r='10')
                                                                path(stroke-linecap='round' stroke-linejoin='round' d='m13.5 8l-4 4l4 4')

                                                    span.glyphicon.glyphicon-chevron-left
                                                    span.sr-only Previous
                                            a.right.carousel-control.rounded-2(href='#myMangaCarousel' data-slide='next')
                                                .container-fluid.left-button
                                                    .button 
