mixin mixinAnimeCard(anime)
    .anime-card.card                        
        .card-head
            a(href=`/anime/${anime.animeTitle}/page/1`)
                div.anime-button
                    svg(xmlns='http://www.w3.org/2000/svg', aria-hidden='true', role='img', width='40', height='40', preserveAspectRatio='xMidYMid meet', viewBox='0 0 24 24')
                        path(fill='black', fill-rule='evenodd', d='M12 1C5.925 1 1 5.925 1 12s4.925 11 11 11s11-4.925 11-11S18.075 1 12 1Zm1 15a1 1 0 1 1-2 0v-3H8a1 1 0 1 1 0-2h3V8a1 1 0 1 1 2 0v3h3a1 1 0 1 1 0 2h-3v3Z', clip-rule='evenodd')    
                div
                    img.card-img-top(src=`${anime.imgPath}` alt='Card image')

        .card-body.d-flex.align-items-center.justify-content-center
            .card-title.px-3
                div.asd.d-flex.align-items-center
                    p #{anime.animeTitle}